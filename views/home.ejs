<h1>Codeial / <%= title %> </h1>

<section id = 'feed-posts'> 

        <h3>posts</h3>
        <%if(locals.user) {%>
        <form action="/posts/create" id = 'new-post-form' method="POST">
                <textarea name='content' placeholder='Type here...' cols="30" rows="3"></textarea>
                <input type="submit" value="Post">
        </form>
        <%}%>

       <div id = 'post-list-container'>

        <ul>
                <% for(post of posts){ %>

                        <li>
                                <p>
                                        <%= post.content %>
                                        <br>
                                        <%= post.user.name %>
                                </p>
                        </li>

                <%}%>
        </ul>

       </div>

</section>

